{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",                           // Use the latest JavaScript features
    "lib": ["ESNext"],                            // Use the latest standard library
    "module": "NodeNext",                         // Ensure proper ES module support
    "moduleResolution": "NodeNext",               // Properly resolve modules in Node.js
    "rootDir": "./src",                           // Your source TypeScript files location
    "outDir": "./dist",                           // Compiled JavaScript output directory

    /* Modules and Compatibility */
    "esModuleInterop": true,                      // Enables better compatibility with CommonJS
    "resolveJsonModule": true,                    // Allow importing JSON files
    "allowSyntheticDefaultImports": true,         // Allow default imports even if none exist
    "forceConsistentCasingInFileNames": true,     // Ensure case sensitivity in file imports
    "strict": true,                               // Enable all strict type-checking options
    "skipLibCheck": true                          // Skip checking `.d.ts` type definition files
  },
  "include": ["src"],                             // Include all TypeScript files inside `src`
  "exclude": ["node_modules", "dist"]            // Exclude compiled and dependency files
}
